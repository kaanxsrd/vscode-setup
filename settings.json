{
  "cSpell.language": "en,tr",
  
  "editor.cursorBlinking": "smooth",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.fontSize": 15,
  "editor.formatOnSave": true,
  "editor.minimap.autohide": "scroll",
  "editor.smoothScrolling": true,
  "editor.unicodeHighlight.ambiguousCharacters": false,

  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 800,

  "[*]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  
  "[prisma]": {
    "editor.defaultFormatter": "Prisma.prisma"
  },

  "html.completion.attributeDefaultValue": "singlequotes",

  "javascript.preferences.quoteStyle": "single",
  "javascript.updateImportsOnFileMove.enabled": "always",

  "prettier.jsxSingleQuote": true,
  "prettier.semi": true,
  "prettier.singleQuote": true,
  "prettier.useTabs": false,

  "RainbowBrackets.depreciation-notice": false,

  "terminal.integrated.smoothScrolling": true,

  "typescript.preferences.quoteStyle": "single",
  "typescript.updateImportsOnFileMove.enabled": "always",

  "vscord.app.name": "Visual Studio Code",
  "vscord.status.idle.check": false,
  "vscord.status.idle.enabled": false,
  "vscord.status.state.text.editing": "Working on {file_name}{file_extension}",

  "workbench.activityBar.location": "top",
  "workbench.colorCustomizations": {},
  "workbench.colorTheme": "poimandres-noitalics",
  "workbench.iconTheme": "symbols",
  "workbench.list.smoothScrolling": true,
  "workbench.sideBar.location": "right"
}
